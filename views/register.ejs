<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-2"><img src="/img/dnata_big.png" alt="logo" height="20px"></h1>
      <hr>
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="name">User ID</label>
          <input
            type="text"
            id="uid"
            name="uid"
            class="form-control"
            placeholder="Enter User ID"
            value="<%= typeof uid != 'undefined' ? uid : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="level">Access</label>       
          <select class="form-control" id="level" name="level">
            <option value="opertor" selected>Operator</option>
            <option value="manager">Manager</option>
          </select>

        </div>

        <div class="form-group">
          <label for="name">Cards</label>
          <input
            type="number"
            id="cards"
            name="cards"
            class="form-control"
            placeholder="Enter required cards"
            min = 0
            max = 4
            value="<%= typeof cards != 'undefined' ? cards : 0 %>"
          />
        </div>
        <div class="form-check">
          <input type="checkbox" name="isactive" id="isactive" checked />
          <label for="isactive">Is Active?</label>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
